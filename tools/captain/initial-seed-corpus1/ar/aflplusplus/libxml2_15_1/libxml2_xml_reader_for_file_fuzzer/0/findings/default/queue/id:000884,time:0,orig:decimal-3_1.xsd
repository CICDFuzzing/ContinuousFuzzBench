<?xml version="1>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
Type name="myDecimal">
        <xsd:restriction base="xsl">
            <xsd:totalDigits value="2"/>
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:element name="foo">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="val" type="myDecimal" maxOccurs="unbounded"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

</xsd:schema>
