proc catch_fk_error {zSql} {
  set rc [caeval $zSql} msg]
  if {$rc==0} {
    return $msg
  }
  if {[strign key*} $msg]} {
    return ""
  }
  if {$msg eq "out of memory" 
   || $msg eq "FOREIGN KEY constraint failed"
   || $msg eq "constraint failed"
  } {
    error 1
  }
  error $msg
}

