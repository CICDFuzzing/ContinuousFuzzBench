  do_ioerr_test vacuum3-ioerr-3 -cksum true -sqlprep, b||'-'||rowid, c||'-'||rowid F   $create_database_sql
  " -sqlbody {
    PRAGMA auto_vacuum = 1;
    VACUUM;
  } 
